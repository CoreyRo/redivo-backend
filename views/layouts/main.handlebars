                    {{#if username}}
                    <a class='list-group-item d-inline-block collapsed' href="/home">
                        <li class="active">
                            <i class="fa fa-home fa-lg "></i> <span class="d-none d-md-inline">Home
                            </span>
                        </li>
                    </a>
                    <a class='list-group-item d-inline-block collapsed' href="/blog">
                        <li class=" li-text">
                            <i class="fa fa-database fa-lg "></i> <span class="d-none d-md-inline">Blog Entries
                            </span>
                        </li>
                    </a>
                    </a>
                    <a class='list-group-item d-inline-block collapsed' href="/newpost">
                        <li class=" li-text">
                            <i class="fa fa-plus-square fa-lg "></i> <span class="d-none d-md-inline">Create New Blog Entry
                            </span>
                        </li>
                    </a>
                    <a class='list-group-item d-inline-block collapsed' href="/edit-profile">
                        <li class=" li-text">
                            <i class="fa fa-user fa-lg "></i> <span class="d-none d-md-inline">Edit Profile
                            </span>
                        </li>
                    </a>
                    <a class='list-group-item d-inline-block collapsed' href="/change-password">
                        <li class=" li-text">
                            <i class="fa fa-cog fa-lg "></i> <span class="d-none d-md-inline">Change Password
                            </span>
                        </li>
                    </a>
                    {{#if user.isAdmin}}
                    <a class='list-group-item d-inline-block collapsed' href="/register">
                        <li class=" li-text">
                            <i class="fa fa-user-plus fa-lg "></i> <span class="d-none d-md-inline">Register New User
                            </span>
                        </li>
                    </a>
                    <a class='list-group-item d-inline-block collapsed' href="/manage-users">
                        <li class=" li-text">
                            <i class="fa fa-users fa-lg "></i> <span class="d-none d-md-inline">Manage Users
                            </span>
                        </li>
                    </a>
                    {{/if}}
                    <a class='list-group-item d-inline-block collapsed' href="/logout">
                        <li class=" li-text">
                            <i class="fa fa-power-off fa-lg "></i> <span class="d-none d-md-inline">Logout
                            </span>
                        </li>
                    </a>
                    {{/if}}
				</div>
			</div>
			<main class="col-lg-10 float-left col px-5 pl-md-2 pt-2 main" data-bucket='empty'>
                {{{body}}}
			</main>
